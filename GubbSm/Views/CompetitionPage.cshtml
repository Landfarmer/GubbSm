@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.CompetitionPage>

@using Clean.Core.Models.ViewModels
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Cms.Core
@using Clean.Core.Extensions

@{
    Layout = "master.cshtml";
    var competitionTitle = Model.Title;
    var competitionIntro = Model.Subtitle;
    var challenges = Model.HasValue("challengePage") ? Model.Value<IEnumerable<IPublishedContent>>("challengePage") : new List<IPublishedContent>();

}

@await Html.PartialAsync("~/Views/Partials/pageHeader.cshtml", new PageHeaderViewModel(Model.Name, competitionTitle, null, Model.MainImage, null, null, null))

<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.GetBlockListHtml(Model.ContentRows)
            </div>
        </div>
    </div>
</article>